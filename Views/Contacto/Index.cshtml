@model List<GestorDeContactos.Models.Contacto>

@{
    ViewData["Title"] = "Contact Page";
}

<h1>Contactos</h1>
<div class="text-center">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Apelido</th>
                <th scope="col">Email</th>
                <th scope="col">Telefone</th>
                <th scope="col">Acção</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var contacto in Model)
            {
                <tr>
                    <th>@contacto.Id</th>
                    <td>@contacto.Nome</td>
                    <td>@contacto.Apelido</td>
                    <td>@contacto.Email</td>
                    <td>@contacto.Telefone</td>
                    <td>
                        <a href="Contacto/View/@contacto.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>